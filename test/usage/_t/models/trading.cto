/**
 * Commodity trading network
 */
namespace org.acme.trading

@doc("this is an \
asset")
@docuri('./doc.md')
asset SampleAsset identified by assetId {

  @doc('unique id for the asset') 
  o String assetId

  @doc()
  o String value
}
asset Commodity identified by tradingSymbol { 
    o String tradingSymbol
    o String description
    o String mainExchange
    o Double quantity
    --> Trader owner optional
}

asset AnotherCommodity identified by tradingSymbol {
    o String tradingSymbol
    o String description
    o String mainExchange
    o Double quantity
    --> Trader owner optional
}

participant Trader identified by tradeId {
    o String tradeId
    o String firstName
    o String lastName
}

@doc("Commoidity identified by the trading tradingSymbol")
participant Regulator identified by regId {
  	o String regId
    o String firstName
    o String lastName
    o String office
}

transaction Trade {
    --> Commodity commodity
    --> Trader newOwner
}

transaction TraderById {
   o String tradeId
   o String tradingSymbol
   o Double qty
}

transaction BulkTrade {
    --> Commodity[] commodity
    --> Trader newOwner
}

event TradeNotification {
    --> Commodity commodity
}

transaction RemoveHighQuantityCommodities {
}

event RemoveNotification {
    --> Commodity commodity
}


transaction _demoSetup {
}

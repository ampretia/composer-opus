#!/usr/bin/env node
'use strict';


const opus = require('../lib/opus');
const yargs = require('yargs');

// Standard Command yargs processing.
let results = yargs
    .option('a', {
        alias: 'archive',
        demandOption: false,
        describe: 'Archive file to document',
        type: 'string'
    })
    .option('o', {
        alias: 'outdir',
        demandOption: false,
        default: './out',
        describe: 'Output Directory',
        type: 'string'
    }).option('c', {
        alias: 'config',
        demandOption: false,
        default: 'config.yaml',
        describe: 'path to the configuration file',
        type: 'string'
    })
    .strict()
    .help().argv;

opus(results);

